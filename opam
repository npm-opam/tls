license:      "BSD2"

build: [
  [ "./configure" "--prefix" prefix
    "--%{lwt:enable}%-lwt"
    "--%{mirage-types-lwt+ipaddr:enable}%-mirage" ]
  [ make ]
]
install: [ make "install"]
remove: [ "ocamlfind" "remove" "tls" ]

depends: [
  "ocamlfind" {build}
  "oasis" {build}
  "ocamlbuild" {build}
  "result"
  "ppx_tools"
  "cstruct" {>= "1.9.0"}
  "sexplib"
  "ppx_sexp_conv"
  "nocrypto" {>= "0.5.3"}
  "x509" {>= "0.5.0"}
  "ounit" {test}
]
depopts: [
  "lwt"
  "mirage-types-lwt"
]
conflicts: [
  "lwt" {<"2.4.8"}
  "mirage-types-lwt" {<"2.3.0"}
  "mirage-net-xen" {<"1.3.0"}
]

build-test: [
  [ "./configure" "--%{ounit:enable}%-tests" ]
  [ make "test" ]
]

tags: [ "org:mirage"]
available: [ ocaml-version >= "4.02.2" ]
